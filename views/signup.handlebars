{{! <div class="min-vh-100 d-flex align-items-center"> }}
<div class="d-flex align-items-center">
  <section class="w-100 row justify-content-center">
    <div class="col-10 col-md-6 col-lg-5">
      {{! <h1 class="display-3 text-center custom-text-color">Sign Up!</h1> }}
      <form
        class="custom-card-body border border-dark my-3 p-3 rounded signup-form"
      >
        {{! <h3>Fill out the form and get started!</h3> }}
        <div class="custom-color text-white p-2">SignUp</div>
        <div class="form-group">
          <label for="username">Username</label>
          <input
            type="text"
            id="username"
            class="form-control"
            placeholder="Username"
            autocomplete="off"
            required
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="text"
            id="email"
            class="form-control"
            placeholder="Email"
            autocomplete="off"
            required
          />
          <small id="emailHelp" class="form-text text-muted">We'll never share
            your email with anyone else.</small>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <div class="input-group align-items-center">
            <input
              class="form-control"
              id="password"
              type="password"
              placeholder="password"
              required
            />
            <div class="input-group-addon">
              <i
                class="bi bi-eye-slash"
                id="togglePassword"
                style="
                      color: black;
                      background-color: lightgray;
                      border: 1px solid;
                      padding: 0.46rem;
                    "
              ></i>
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-block btn-secondary">Complete
          Signup!</button>
        <div class="p-2">
          Already registered?
          <a href="/login">Login</a>
        </div>
      </form>
    </div>
  </section>

</div>
<script src="/js/passwordvisibility.js"></script>
<script src="/js/signup.js"></script>
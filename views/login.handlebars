<div class="d-flex align-items-center">
  <section class="w-100 row justify-content-center">
    <div class="col-10 col-md-6 col-lg-5">
      {{! <h1 class="display-3 text-center custom-text-color">Login</h1> }}
      <form
        class="custom-card-body border border-dark my-3 p-3 rounded login-form"
      >

        <div class="custom-color text-white p-2">Login</div>
        <div class="form-group">
          <label for="username">Username</label>
          <input
            type="text"
            id="username"
            class="form-control"
            placeholder="Username"
            autocomplete="off"
            required
          />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <div class="input-group align-items-center">
            <input
              class="form-control"
              id="password"
              type="password"
              placeholder="password"
              required
            />
            <div class="input-group-addon">
              <i
                class="bi bi-eye-slash"
                id="togglePassword"
                style="
                      color: black;
                      background-color: lightgray;
                      border: 1px solid;
                      padding: 0.46rem;
                    "
              ></i>
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-block btn-secondary">Login</button>
        <div class="p-2">
          Don't have an account?
          <a class="p-2" href="/signup">SignUp!</a>
        </div>
      </form>
    </div>
  </section>
</div>
<script src="/js/passwordvisibility.js"></script>
<script src="/js/login.js"></script>
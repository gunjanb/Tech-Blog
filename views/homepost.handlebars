{{#if posts.length}}
  {{#each posts as |post|}}
    <div class="card m-3 border border-dark rounded">
      <div
        class="card-header d-flex justify-content-between custom-color text-light"
      >
        <a class="title-links" href="/post/{{id}}"><h5>{{post.title}}</h5></a>
        <p>posted by {{post.user.name}} on {{format_date created_at}}</p>
      </div>
      <div class="card-body custom-card-body">
        <p class="card-text">
          {{post.content}}
        </p>
      </div>
    </div>
  {{/each}}
{{else}}
  <h1>No Blog Posts are available for Read</h1>
{{/if}}
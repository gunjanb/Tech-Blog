<div class="text-center display-flex flex-column justify-center">
  <h2> Welcome {{username}} !! </h2>
</div>

{{#if posts.length}}
  {{#each posts as |post|}}
    <div class="card m-3 border border-dark rounded">
      <div
        class="card-header d-flex justify-content-between custom-color text-light"
      >
        <h5>{{post.title}}</h5>
        <p>created on {{format_date created_at}}</p>
      </div>
      <div class="card-body custom-card-body">
        <p class="card-text">
          {{post.content}}
        </p>
        <a
          href="/dashboard/edit/{{post.id}}"
          class="btn btn-secondary edit-post"
        >Edit post</a>
      </div>
    </div>
  {{/each}}
{{else}}
  <h5 class="d-flex justify-content-center m-2 p-2">Share your expertise by
    creating Blogs
  </h5>
{{/if}}

<div class="text-center display-flex flex-column justify-center">
  <a href="/dashboard/addform" class="btn btn-secondary">Add Post</a>
</div>
{{! <div class="d-flex  justify-content-center "> }}
  <section class="row justify-content-center">
    {{! <div class="col-10 col-md-6 col-lg-12"> }}
      <form class="edit-post">
        <div class="custom-width d-flex flex-column m-2">
          <label for="post-title">Title:</label>
          <input type="text" id="post-title" name="post-title" value="{{post.title}}" class="border border-dark rounded"
            required />
        </div>
        <div class="custom-width d-flex flex-column m-2">
          <label for="post-content">Content:</label>
          <textarea name="post-content" id="post-content" rows="5" required>{{post.content}}</textarea>
        </div>
        <div class="m-4 d-flex justify-content-around">
          <button type="submit" class="btn btn-secondary delete-post">
            Delete</button>
          <button type="submit" class="btn btn-secondary update-post">
            Update</button>
        </div>
      </form>
  </section>
  {{!
</div> }}
<script src="/js/deletepost.js"></script>
<script src="/js/updatepost.js"></script>